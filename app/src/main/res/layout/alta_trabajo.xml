<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alta_trabajo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ar.edu.utn.frsf.isi.dam.alta_trabajo">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/descripcion"
        android:layout_below="@+id/tv1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Descripcion del trabajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="119dp"
        android:id="@+id/categ"
        android:layout_below="@+id/tv2"
         />

    <TextView
        android:text="Categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:layout_below="@+id/descripcion"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Moneda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categ"
        android:layout_alignParentStart="true"
        android:id="@+id/tv3" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv3"
        android:layout_marginTop="14dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/radioGroup">

        <RadioButton
            android:text="Dolar EStadounidense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/us"
            android:layout_weight="1"
            android:checked="false" />

        <RadioButton
            android:text="Euro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eu"
            android:layout_weight="1"
            android:checked="false" />

        <RadioButton
            android:text="Peso Argentino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ar"
            android:layout_weight="1"
            android:checked="false" />

        <RadioButton
            android:text="Libra Britanica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lib"
            android:layout_weight="1"
            android:checked="false" />

        <RadioButton
            android:text="RealBrasileÃ±o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/re"
            android:layout_weight="1"
            android:checked="false" />
    </RadioGroup>

    <Button
        android:text="Guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botonGuardar"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp" />


</RelativeLayout>